<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
	version="2.0">
	
	<persistence-unit name="manager1" transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>solidstack.query.hibernate.DerbyTable</class>
		<properties>
			<property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenSixDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:memory:test;create=true" />
			<property name="javax.persistence.jdbc.user" value="app" />
			<property name="javax.persistence.jdbc.password" value="" />
		</properties>
	</persistence-unit>

</persistence>
